<%= provide(:title, "Edit group") %>
<h1>Editing <%= @group.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3 danger">
    <h2>Delete group</h2>
    <div class="panel panel-danger">
      <div class="panel-heading">
        This operation is destructive and irreversible.
      </div>
      <div class="panel-body">
        All events will be removed and members will lose
        hours that they have gained from these events.
      </div>
    </div>
    <%= link_to "Delete group", @group, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger delete-link" %>
  </div>
</div>
