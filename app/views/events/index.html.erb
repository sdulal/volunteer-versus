<%= provide(:title, @group.name + "'s events") %>
<h1>Events of <%= @group.name %></h1>

<div class="row">
  <div class="col-md-12 center-block">
    <%= will_paginate %>
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Name</td>
          <td>Date</td>
          <td>Starts</td>
          <td>Ends</td>
          <td>Location</td>
        </tr>
      </thead>
      <tbody>
        <% @group.events.each do |event| %>
          <tr>
            <td><%= link_to event.name, event %></td>
            <td><%= formatted_day(event.date) %></td>
            <td><%= formatted_time(event.start_time) %></td>
            <td><%= formatted_time(event.end_time) %></td>
            <td><%= event.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
